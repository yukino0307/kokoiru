= render "layouts/header"

.body-user
  .container
    %header
      .row
        %h2 ログイン
  %hr/
  .container
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .noaccount
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", "#"
      .field
        .field-label
          %span.label.label-danger 必須
          = f.label :email,"メールアドレス"
        .field-input
          = f.email_field :email, placeholder: "例) a@example.com", required: true, class: "input_default"
      .field
        .field-label
          %span.label.label-danger 必須
          = f.label :password,"パスワード"
        .field-input
          = f.password_field :password, autocomplete: "off", placeholder: "英数字6文字以上", required: true, class: "input_default"
      .actions
        = f.submit "ログインする", class: "btn-square-shadow"